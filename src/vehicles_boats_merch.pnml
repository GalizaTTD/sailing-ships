}

spritegroup spritegroup_merch_default_running{
	loading: [spriteset_merch_default_running_empty,spriteset_merch_default_running_full];
	loaded: [spriteset_merch_default_running_empty,spriteset_merch_default_running_full];
}


spritegroup spritegroup_merch_bulk_still{
	loading: [spriteset_merch_bulk_still_empty, spriteset_merch_bulk_still_full];
