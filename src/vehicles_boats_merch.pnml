}

/*switches*/
 switch (FEAT_SHIPS, SELF , switch_merch_default_move, current_speed) {
 	0 :   spritegroup_merch_default_still; 
 	spritegroup_merch_default_running;       
 }


 switch (FEAT_SHIPS, SELF , switch_merch_bulk_move, current_speed) {
 	0 :   spritegroup_merch_bulk_still; 
 	spritegroup_merch_bulk_running;       
 }

 switch (FEAT_SHIPS, SELF , switch_merch_pass_move, current_speed) {
 	0 :   spritegroup_merch_pass_still; 
 	spritegroup_merch_pass_running;       
 }

 switch (FEAT_SHIPS, SELF , switch_merchcargo, cargo_type_in_veh) {
	PASS : 	return 80;
 	return 100;
 }

 switch (FEAT_SHIPS, SELF, switch_merch_default_depot,extra_callback_info1) {
	0x10 : spriteset_merch_default_depot;
	0x11 : spriteset_merch_default_depot;
	0x12 : spriteset_merch_default_depot;
	switch_merch_default_move;
}

 switch (FEAT_SHIPS, SELF, switch_merch_bulk_depot,extra_callback_info1) {
	0x10 : spriteset_merch_bulk_depot;
	0x11 : spriteset_merch_bulk_depot;
	0x12 : spriteset_merch_bulk_depot;
	switch_merch_bulk_move;
}

 switch (FEAT_SHIPS, SELF, switch_merch_pass_depot,extra_callback_info1) {
	0x10 : spriteset_merch_pass_depot;
	0x11 : spriteset_merch_pass_depot;
	0x12 : spriteset_merch_pass_depot;
	switch_merch_pass_move;
}

switch (FEAT_SHIPS, SELF, switch_merch_default_purchase,extra_callback_info1) {
	0x20 : spriteset_merch_buymenu;
	0x21 : spriteset_merch_prev;
	spriteset_merch_buymenu;
}
/*next define item properties*/

//common vehicle properties
item (FEAT_SHIPS , item_merch) {
	property {
		name : string(STR_MERCH_NAME);
		climates_available : ALL_CLIMATES & ~bitmask(CLIMATE_TOYLAND);
		introduction_date : date(1750,07,01);
		reliability_decay : 12;
		model_life : 110;
		vehicle_life : 40;
		refittable_cargo_classes : ALL_NORMAL_CARGO_CLASSES;
		non_refittable_cargo_classes : bitmask(CC_BULK);
		loading_speed: 25;
		cost_factor : 88 / 2;
		running_cost_factor: 80;
		cargo_age_period: 370;

//ship specific properties

		sprite_id : SPRITE_ID_NEW_SHIP;
		speed : 25 km/h;
		ocean_speed_fraction: 1.0;
		canal_speed_fraction: 0.4;
		misc_flags : bitmask(SHIP_FLAG_2CC, SHIP_FLAG_AUTOREFIT);
		refit_cost : 0;
		is_refittable : 1;
		default_cargo_type : GOOD;
		cargo_capacity : 100;
		sound_effect : sound("src/wav/bell_merch.wav");
	}
	graphics {
		purchase: switch_merch_default_purchase;
		additional_text : string(STR_MERCH_BUYMENU);
		cargo_capacity : switch_merchcargo;
		default: switch_merch_default_depot;
		PASS: switch_merch_pass_depot;
		COAL : switch_merch_bulk_depot;
		WOOD : switch_merch_bulk_depot;
		IORE : switch_merch_bulk_depot;
		WHEA : switch_merch_bulk_depot;
		MAIZ : switch_merch_bulk_depot;
		CORE : switch_merch_bulk_depot;
		AORE : switch_merch_bulk_depot;
		CERE : switch_merch_bulk_depot;
		CLAY : switch_merch_bulk_depot;
		COPR : switch_merch_bulk_depot;
		GRVL : switch_merch_bulk_depot;
		SAND : switch_merch_bulk_depot;
	}
}
